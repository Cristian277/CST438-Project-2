<div class='container'>
    <div class='jumbotron'>
        <h1 align="center"> Video Game Result </h1>
        <div class='row'>
            <div class='col-sm-4'></div>
            <button class='col-sm-4 btn btn-success btn-block' onclick='location.href="/search";'>Search Again</button>
            <div class='col-sm-4'></div>
        </div>
    </div>
    
    <div class='row'>
        <%if(!title){%>
            <h1 class='col-sm-12 notfound'>Video Game Not Found!</h1>
        <%}
        else{%>
        <img class='col-sm-4 portrait' src=<%=title.image%> />
		    <div class='col-sm-4 info'>
		        <h3><%=title.name%></h3>
		        <h3><%=title.yearMade%></h3>
		        <h3><%=title.genre%></h3>
		        <h1><%=title.summary%></h1>
		    </div>
        <%}%>
	</div>
	</br>
    </br>
    <form action="/cart/<%=title.gameId%>/add" method="GET">
            
			<button class='btn btn-primary btn-block'>Add to Cart</button>
			
	</form>
</div>

</br>
</br>

